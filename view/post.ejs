<%- include('./admin-layout/header.ejs'); %> 
          <main role="main" class="col-md-9 ml-sm-auto col-lg-10 px-4"> 
                <h2>Post</h2> 
                <a href="/blogPost" class="btn btn-primary">Add Post</a>
                 <div class="table-responsive">
                   <table class="table table-striped table-sm">
                     <thead>
                       <tr>
                         <th>Id</th>
                         <th>Title</th>
                         <th>Description</th>
                         <th>Photo</th>
                         <th>Action</th> 
                       </tr>
                     </thead>
                     <tbody>
                       <% for(var i=0; i< users.length; i++) { %>
                       <tr>
                         <td><%= users[i].id %></td>
                         <td><%= users[i].title %></td>
                         <td><%= users[i].description %></td>
                         <td>
                           <img src="images/<%= users[i].image %>" width="100px" height="100px"/>
                         </td>
                         <td>
                           <a href="/editBlog/<%= users[i].id %>" class="btn btn-primary">Edit</a>
                           <a href="/deletepost/<%= users[i].id %>" class="btn btn-danger">Delete</a>
                         </td>
                       </tr>
                       <% } %>
                 
                     </tbody>
                   </table>
                 </div>
               </main>
             </div>
           </div>
       

            <%- include('./admin-layout/footer.ejs'); %>
